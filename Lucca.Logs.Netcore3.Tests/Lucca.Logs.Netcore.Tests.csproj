    <None Update="Configs\missing.json">
      <CopyToOutputDirectory>Always</CopyToOutputDirectory>
    </None>
    <None Update="Configs\standard.json">
      <CopyToOutputDirectory>Always</CopyToOutputDirectory>
    </None>
