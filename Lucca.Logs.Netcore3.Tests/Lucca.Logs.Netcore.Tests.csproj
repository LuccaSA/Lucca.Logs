  </ItemGroup>

  <ItemGroup>
    <ProjectReference Include="..\Lucca.Logs.AspnetCore\Lucca.Logs.AspnetCore.csproj" />
  </ItemGroup>

  <ItemGroup>
    <None Update="Configs\minimal.json">
